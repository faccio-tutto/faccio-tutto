{
  "compilerOptions": {
    "target": "ES2020", // O ESNext
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // O "node" per versioni precedenti di Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // O "react-jsx" o "react-jsxdev"
    "jsxImportSource": "react",
    "incremental": true,
    "plugins": [
   
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/api/invia-email/route.js"],
  "exclude": ["node_modules"]
}